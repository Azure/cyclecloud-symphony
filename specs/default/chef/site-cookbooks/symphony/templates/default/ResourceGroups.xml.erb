<?xml version="1.0" encoding="UTF-8"?>
<ResourceGroupConfiguration xmlns="http://www.platform.com/ego/2005/05/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.platform.com/ego/2005/05/schema ../ego.xsd">
  <Version>3.7</Version>
  <ResourceGroup ResourceGroupName="ManagementHosts" availableSlots="32">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceList>
      <% @mgmt_list.each do |mgmt| %>
      <ResourceEntry ResourceID="<%= mgmt %>"/>
      <% end %>
    </ResourceList>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="ComputeHosts">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceRequirement>select(!mg)</ResourceRequirement>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="InternalResourceGroup" availableSlots="10">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="MapReduceInternalResourceGroup">
    <Description>Default Map Reduce Resource Group</Description>
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceRequirement>select(!mg)</ResourceRequirement>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="NameNodeRG">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceRequirement>select(mg)</ResourceRequirement>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="SecondaryNodeRG">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceRequirement>select(mg)</ResourceRequirement>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="DataNodeRG" availableSlots="1">
    <ResourcePlugins>
      <Plugin Name="computer"/>
    </ResourcePlugins>
    <ResourceRequirement>select(!mg)</ResourceRequirement>
  </ResourceGroup>
  <ResourceGroup ResourceGroupName="YarnRG">
    <ResourcePlugins>
      <Plugin Name="dynamic"/>
    </ResourcePlugins>
    <SchedulerPluginName>md</SchedulerPluginName>
    <ResourceRequirement>select(!mg)</ResourceRequirement>
  </ResourceGroup>
</ResourceGroupConfiguration>
